<% provide(:title, @customer.name) %>
<h1 class="h2 mb-4"><i class="fas fa-user-tie"></i><%= @customer.name %></h1>
<div class="row">
  <div class="col">
    <div class="text-right">
      <%= link_to(edit_customer_path, class: "btn btn-outline-primary", role: "button") do %>
      <i class="fas fa-user-edit fa-lg" title="編集"></i>
      <% end %>
    </div>
    <table class="table table-sm">
      <tbody>
	<tr>
	  <th scope="row">氏名</th>
	  <td><%= @customer.name %></td>
	</tr>
	<tr>
	  <th scope="row">フリガナ</th>
	  <td><%= @customer.furigana %></td>
	</tr>
      </tbody>
    </table>
    <hr class="mb-4">
    <h2 class="h3 mb-3">生徒情報</h2>
    <% if @customer.students.size == 0 %>
    <p class="text-muted">no students</p>
    <% else %>
    <% @customer.students.order(:furigana).each do |student| %>
    <h3 class="h4 mb-3"><i class="fas fa-child"></i><%= student.name %></h3>
    <table class="table table-sm">
      <tbody>
	<tr>
	  <th scope="row">氏名</th>
	  <td><%= student.name %></td>
	</tr>
	<tr>
	  <th scope="row">フリガナ</th>
	  <td><%= student.furigana %></td>
	</tr>
      </tbody>
    </table>

    <table class="table table-sm">
      <thead class="thead-light">
	<tr>
	  <th scope="col" class="w-50">科目</th>
	  <th scope="col">価格</th>
	  <th scope="col">契約開始日</th>
	  <th scope="col">契約終了日</th>
	</tr>
      </thead>
      <tbody>
	<tr><td colspan="4" class="text-muted text-center">契約がありません。</td></tr>
      </tbody>
    </table>

    <% end %>
    <% end %>
  </div>
</div>
